.container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: space; */
  font-size: 35rpx;
  background-color: #f5f5f5;
}

.name{
  font-weight: 700;
}

.id{
  font-weight: 300;
  font-size: 25rpx;
}

button{
  background-color: white;
}

.user{
  background-color: white;
  border-bottom: 60rpx solid #f5f5f5;
}

.one{
  display: flex;
  flex-direction: row;
}

image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 40rpx;
}

.two{
  display: flex;
  flex-direction: column;
}

.name{
  line-height: 90rpx;
}

.id{
  line-height: 90rpx;
}

.main{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-bottom: 50rpx solid #f5f5f5;
}
