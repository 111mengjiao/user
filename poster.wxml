<view class="swiper-tab">
       <view class="swiper-tab-list {{currentTab == 0 ?'on' :''}}" data-current="0" bindtap="swichNav">
             已接贴
       </view>
       <view class="swiper-tab-list {{currentTab == 1 ?'on' :''}}" data-current="1" bindtap="swichNav">
             已发贴
       </view>
</view>
        <swiper  current="{{currentTab}}" class="swiper-box" duration="500" style="height:{{winHeight-31}}px" bindChange="bindChange">
               <swiper-item>
                          <view class="box">
                               <text class="poster">发帖人：</text>
                               <text class="content">内容：</text>
                               <text class="time">完成时间：</text>
                          </view>
                          <view class="box">
                               <text class="poster">发帖人：</text>
                               <text class="content">内容：</text>
                               <text class="time">完成时间：</text>
                          </view>
               </swiper-item>
               <swiper-item>
                          <view>
                               <text class="content">帖子内容：</text>
                               <text class="time">发帖时间：</text>
                          </view>
               </swiper-item>           
        </swiper>
